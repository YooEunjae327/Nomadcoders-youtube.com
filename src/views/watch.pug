extends base.pug

block content
    video(src='/' + video.fileUrl, controls)
    div
        p=video.description
        small=video.createdAt
    div
        small Uploaded by 
            a(href=`/users/${video.owner._id}`) #{video.owner.name}
    if video.owner._id == loggedInUser._id
        a(href=`${video.id}/edit`) Edit Video –>
        br
        a(href=`${video.id}/delete`) Delete Video –>
